{{ >partials/header }}

{{ #banner }}
<section class="banner" style="background-image: url('images/{{ background__path  }}')">{{ title }}</section>
<h2>{{ title }} disponíveis para adoção</h2>
{{ /banner }}



<div class="container list">
    {{ #petData }}
        <div class="item">
            <img src="images/{{ image }}" class="item--image" />
            <div class="item--name">{{ name }}</div>
            <div class="item--color">Cor: {{ color }}</div>
            <div class="item--genre">Gênero: {{ sex }}</div>
        </div>
    {{ /petData }}
</div>
{{ ^petData }}
    <div class='container no-list'>
        <h2>Não há animais disponíveis com o termo "{{ q }}"</h2>
    </div>
{{ /petData }}

{{ >partials/footer }}